<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.ilemontech.ldcos.repository.RoleRepository">
    <!-- 列 -->
    <sql id="columns">
        id,
        `name`,
        `type`,
        `status`,
        remark,
        create_time,
        update_time
    </sql>
    <!-- 插入新数据 -->
    <insert id="insert">
        INSERT INTO sys_role
        (<include refid="columns" />)
        VALUES (NULL ,#{name},#{type},#{status},#{remark},#{createTime},#{updateTime})
    </insert>
    <!-- 查找一条数据 -->
    <select id="findOne" resultType="com.ilemontech.ldcos.entity.RoleEntity">
        SELECT
        <include refid="columns" />
        FROM sys_role
        WHERE id = #{id}
    </select>
</mapper>