<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.ilemontech.ldcos.repository.UserRepository">
    <!-- 所有的fields -->
    <sql id="columns">
        id,
        username,
        real_name,
        `password`,
        email,
        phone,
        `status`,
        remark,
        login_ip,
        login_time,
        expired_time,
        password_expired_time,
        create_time,
        update_time
    </sql>
    <!-- 通过id查询 -->
    <select id="findOne" resultType="com.ilemontech.ldcos.cloud.entity.UserEntity">
        SELECT
        <include refid="columns" />
        FROM sys_user
        WHERE id = #{id}
    </select>
    <!-- 通过用户名查询用户 -->
    <select id="findByUserName" resultType="com.ilemontech.ldcos.cloud.entity.UserEntity">
        SELECT
        <include refid="columns" />
        FROM sys_user
        WHERE username = #{userName}
    </select>
    <!-- 动态查询 -->
    <select id="findAllSelective" resultType="com.ilemontech.ldcos.cloud.entity.UserEntity">
        SELECT
        <include refid="columns" />
        FROM sys_user
        <where>
            <if test="id!=null and id!=''">
                id=#{id}
            </if>
            <if test="username!=null and username!=''">
                and username=#{username}
            </if>
            <if test="realName!=null and realName!=''">
                and real_name=#{realName}
            </if>
            <if test="password!=null and password!=''">
                and password=#{password}
            </if>
            <if test="email!=null and email!=''">
                and email=#{email}
            </if>
            <if test="phone!=null and phone!=''">
                and phone=#{phone}
            </if>
            <if test="status!=null and status!=''">
                and status=#{status}
            </if>
            <if test="remark!=null and remark!=''">
                and remark=#{remark}
            </if>
            <if test="loginIp!=null and loginIp!=''">
                and login_ip=#{loginIp}
            </if>
        </where>
    </select>
    <!-- 模糊查询 -->
    <select id="findAllByLikeAndSelective" resultType="com.ilemontech.ldcos.cloud.entity.UserEntity">
        SELECT
        <include refid="columns" />
        FROM sys_user
        <where>
            <if test="id!=null and id!=''">
                id like %#{id}%
            </if>
            <if test="username!=null and username!=''">
                or username like %#{username}%
            </if>
            <if test="realName!=null and realName!=''">
                or real_name like %#{realName}%
            </if>
            <if test="email!=null and email!=''">
                or email like %#{email}%
            </if>
            <if test="phone!=null and phone!=''">
                or phone like %#{phone}%
            </if>
            <if test="remark!=null and remark!=''">
                or remark like %#{remark}%
            </if>
            <if test="loginIp!=null and loginIp!=''">
                or login_ip like %#{loginIp}%
            </if>
            <if test="status!=null and status!=''">
                and status=#{status}
            </if>
        </where>
    </select>
    <!-- 插入新用户信息 -->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        INSERT INTO sys_user
        (<include refid="columns" />)
        VALUES(NULL,#{username},#{realName},#{password},#{email},#{phone},#{status},#{remark},#{loginIp},#{loginTime},#{expiredTime},#{passwordExpiredTime},#{createTime},#{updateTime})
    </insert>
    <!-- 更新用户密码 -->
    <update id="updatePassword">
        UPDATE sys_user
        SET password = #{password}, update_time = now()
        WHERE id = #{id}
    </update>
    <!-- 更新用户信息 -->
    <update id="update">
        UPDATE sys_user
        <set>
            <if test="realName!=null and realName!=''">
                real_name=#{realName},
            </if>
            <if test="email!=null and email!=''">
                email=#{email},
            </if>
            <if test="phone!=null and phone!=''">
                phone=#{phone},
            </if>
            <if test="status!=null and status!=''">
                status=#{status},
            </if>
            <if test="remark!=null and remark!=''">
                remark=#{remark},
            </if>
            <if test="updateTime!=null">
                update_time=#{updateTime},
            </if>
        </set>
        WHERE id = #{id}
    </update>
    <!-- 删除用户信息 -->
    <delete id="delete">
        DELETE FROM sys_user
        WHERE id = #{id}
    </delete>
</mapper>