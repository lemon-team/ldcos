<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.ilemontech.ldcos.repository.GroupRepository">
    <sql id="columns">
        id,
        `name`,
        `status`,
        create_time,
        update_time
    </sql>
    <!-- 通过id查找 -->
    <select id="findOne" resultType="com.ilemontech.ldcos.entity.GroupEntity">
        SELECT
        <include refid="columns" />
        FROM sys_group
        WHERE id = #{id};
    </select>
    <!-- 插入数据 -->
    <insert id="insert">
        INSERT INTO sys_group (<include refid="columns" />)
        VALUES (NULL ,#{name},#{status},#{createTime},#{updateTime})
    </insert>
</mapper>